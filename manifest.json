{
  "name": "Simple Image Viewer",
  "version": "0.1",
  "description": "Enhance the experience of viewing images",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
          "*://*/*.jpg",
          "*://*/*.jpeg",
          "*://*/*.png",
          "*://*/*.gif",
          "*://*/*.bmp",
          "*://*/*.webp"
      ],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 3
}
